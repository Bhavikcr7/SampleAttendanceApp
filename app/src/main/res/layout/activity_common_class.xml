<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.sampleattendanceapp.commonClass">


    <ListView
        android:id="@+id/myListView"
        android:layout_width="368dp"
        android:layout_height="349dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/A_submitButton"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_marginBottom="111dp"
        android:layout_marginTop="13dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myListView"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/viewAttendance"
        android:layout_width="155dp"
        android:layout_height="35dp"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="202dp"
        android:layout_marginTop="21dp"
        android:text="ViewAttendance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A_submitButton" />

    <Button
        android:id="@+id/backToProfile"
        android:layout_width="106dp"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="249dp"
        android:layout_marginStart="29dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAttendance"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
